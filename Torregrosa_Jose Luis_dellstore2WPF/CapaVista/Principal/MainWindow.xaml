<Window x:Class="Interfaz.MainWindow" 
        MinHeight="720" MinWidth="1280"  MaxHeight="720" MaxWidth="1280"
        Width="1280" Height="720"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interfaz"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid Background="Gray">
        <Menu HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0,0,-8,0" Width="1280" Height="32">
            <MenuItem Header="Gestión de clientes">
                <MenuItem Header="Insertar" Click="AbrirCliente"/>
                <MenuItem Header="Modificar"/>
            </MenuItem>
            <MenuItem Header="Gestión de productos">
                <MenuItem Header="Consultar"/>
            </MenuItem>
            <MenuItem Header="Gestión de pedidos" Height="30">
                <MenuItem Header="Nuevo"/>
                <MenuItem Header="Consultar"/>
            </MenuItem>
            <MenuItem Header="Cerrar" Click="Button_Close"/>
        </Menu>
        <StatusBar HorizontalAlignment="Left" Height="30" Margin="0,659,0,0" VerticalAlignment="Top" Width="1272"/>
    </Grid>
</Window>
