<Application x:Class="Interfaz.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Interfaz"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <Style x:Key="Mis_TextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize" Value="21.333"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="151"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="Mis_Labels" TargetType="Label">
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize" Value="21.333"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>


        
    </Application.Resources>

</Application>
